<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <!-- 🏟️ Gambar Stadion -->
    <ImageView
        android:id="@+id/img_stadium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/stadium_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        android:contentDescription="@string/club_name" />

    <!-- ⚽ Logo Klub di Tengah Gambar Stadion -->
    <ImageView
        android:id="@+id/iv_logo_lehavre"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/lehavre_logo"
        android:contentDescription="@string/club_name"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/img_stadium"
        app:layout_constraintBottom_toBottomOf="@id/img_stadium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="8dp" />

    <!-- 🏆 Nama Klub di bawah Logo -->
    <TextView
        android:id="@+id/tvClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/club_name"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="20dp"
        android:background="#0D47A1"
        android:elevation="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_lehavre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center" />


    <!-- 📜 ScrollView untuk deskripsi dan menu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvClubName"
        app:layout_constraintBottom_toTopOf="@id/btn_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 📘 CardView Deskripsi Klub -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/desc_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/material_dynamic_primary90"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/desc_club"
                    android:textColor="#222"
                    android:textSize="14sp"
                    android:justificationMode="inter_word" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 📋 LinearLayout untuk Menu Navigasi -->
            <LinearLayout
                android:id="@+id/linear_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/desc_club"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Menu Club History -->
                <include
                    android:id="@+id/layout_history"
                    layout="@layout/layout_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Menu Head Coach -->
                <include
                    android:id="@+id/layout_coach"
                    layout="@layout/layout_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Menu Team Squad -->
                <include
                    android:id="@+id/layout_team"
                    layout="@layout/layout_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 🔹 Container Fragment -->
            <FrameLayout
                android:id="@+id/fragmentContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/linear_menu"
                android:background="#FFFFFF" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 🔙 Tombol Kembali -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="@color/white"
        android:backgroundTint="#0D47A1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

