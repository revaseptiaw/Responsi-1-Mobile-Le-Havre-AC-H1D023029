<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pemain"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0D47A1"
        android:layout_marginBottom="12dp" />

    <!-- Tanggal Lahir -->
    <TextView
        android:id="@+id/tvPlayerBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir: 01 Januari 2000"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginBottom="6dp" />

    <!-- Kebangsaan -->
    <TextView
        android:id="@+id/tvPlayerNationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kebangsaan: Prancis"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginBottom="6dp" />

    <!-- Posisi -->
    <TextView
        android:id="@+id/tvPlayerPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posisi: Forward"
        android:textSize="16sp"
        android:textColor="#333" />

</LinearLayout>
